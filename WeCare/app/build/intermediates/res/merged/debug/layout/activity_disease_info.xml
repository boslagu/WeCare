<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thea.wecare.DiseaseInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDiseaseLearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtDescriptionLearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="TextView" />


        <TextView
            android:id="@+id/txtCheckerLearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="15dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSaveBookmarkLearning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="btnSaveBookmarkLearning"
            android:text="Save to Bookmark" />
    </LinearLayout>
</LinearLayout>
