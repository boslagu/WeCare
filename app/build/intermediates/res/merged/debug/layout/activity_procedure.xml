<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thea.wecare.Procedure">

    <TextView
        android:id="@+id/diseasesNameProcedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.61">

        <LinearLayout
            android:id="@+id/lyoutprocedure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/baymaxBodyProcedure"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:visibility="visible"
                app:srcCompat="@drawable/docdoc" />

            <TextView
                android:id="@+id/txtDaysProcedure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/txtDiseaseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Disease Name"
                    android:textColor="#2762be"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtDiseaseDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/Hereditary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hereditary"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtHereditary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cause"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtcause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/looklike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Look Like"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtlooklike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/diagnosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diagnosed"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtDiagnosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Symptoms"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtSymptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disease Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtHerbalName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Herbal Name"
                    android:textColor="#2762be"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtHerbalDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Herbal Description"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Procedure"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtHerbalProcedure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Herbal Procedure"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtHerbalDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Herbal Days"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eff5f8"
                    android:onClick="btnConfirmDisease"
                    android:text="Monitor"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <ToggleButton
                    android:id="@+id/toggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/progressBar1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="21dp"
                    android:text="ToggleButton"
                    android:textOff="Click to confirm"
                    android:textOn="Click to confirm" />


                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progressBar1"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_marginTop="47dp" />

                <TextView
                    android:id="@+id/questionLoadertxt"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    </LinearLayout>
</LinearLayout>
