                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/diagnosed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
