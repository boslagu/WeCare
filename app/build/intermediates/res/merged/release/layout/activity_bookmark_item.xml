                        <TextView
                            android:id="@+id/txtcauseB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/looklike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
