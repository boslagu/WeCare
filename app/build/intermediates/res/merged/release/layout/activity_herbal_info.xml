<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thea.wecare.HerbalInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgViewHerbalInfo1"
                        android:layout_width="360dp"
                        android:layout_height="250dp" />

                    <ImageView
                        android:id="@+id/imgViewHerbalInfo2"
                        android:layout_width="360dp"
                        android:layout_height="250dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imgViewHerbalInfo3"
                        android:layout_width="360dp"
                        android:layout_height="250dp"
                        android:layout_weight="1" />

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="220dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textColor="#2762be"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="260dp"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|right"
                        android:paddingBottom="5dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="TextView"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/Benefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Benefits"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txtBenefits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtChecker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="15dp"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>


            <!--<Button-->
            <!--android:id="@+id/btnSaveBookmark"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:onClick="btnSaveBookmark"-->
            <!--android:text="Save to Bookmark" />-->
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
